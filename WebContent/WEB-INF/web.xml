<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <context-param>
      <param-name>custServEmail</param-name>
      <param-value>sharrottfastrsale@gmail.com</param-value>
  </context-param>
  <error-page>
    <error-code>404</error-code>
    <location>/errors/error_404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/errors/error_500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/errors/error_java.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>index</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>store.controllers.ProductController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>store.controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>store.controllers.LogoutController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>store.controllers.RegistrationController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StoreRegistrationController</servlet-name>
    <servlet-class>store.controllers.StoreRegistrationController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductsController</servlet-name>
  	<servlet-class>store.controllers.ProductsController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductAPIController</servlet-name>
  	<servlet-class>store.controllers.ProductAPIController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CategoryAPIController</servlet-name>
  	<servlet-class>store.controllers.CategoryAPIController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddProductController</servlet-name>
  	<servlet-class>store.controllers.AddProductController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddProductUploadController</servlet-name>
  	<servlet-class>store.controllers.AddProductUploadController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>StoreAccountController</servlet-name>
  	<servlet-class>store.controllers.StoreAccountController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CartAPIController</servlet-name>
  	<servlet-class>store.controllers.CartAPIController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>FileServlet</servlet-name>
  	<servlet-class>store.controllers.FileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StoreRegistrationController</servlet-name>
    <url-pattern>/store_registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/product/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductsController</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductAPIController</servlet-name>
    <url-pattern>/products/api</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryAPIController</servlet-name>
    <url-pattern>/category/api</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CartAPIController</servlet-name>
    <url-pattern>/cart/api</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductController</servlet-name>
    <url-pattern>/add_product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductUploadController</servlet-name>
    <url-pattern>/add_product_upload</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StoreAccountController</servlet-name>
    <url-pattern>/store_account</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FileServlet</servlet-name>
  	<url-pattern>/files/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>